<!-- Navigation Sidebar -->
<nav class="nav-sidebar">
  {{#each screenings}}
    <div class="nav-theater">
      <a href="#theater-{{@index}}" class="nav-theater-link">{{theaterName}}</a>
      
      <ul class="nav-movies">
        {{#each movies}}
          <li>
            <a href="#movie-{{@../index}}-{{@index}}" class="nav-movie-link {{#if seen}}collapsed{{/if}} {{#if collapse}}collapsed{{/if}}">{{title}}</a>
          </li>
        {{/each}}
      </ul>
    </div>
  {{/each}}
</nav>

<!-- Main Content -->
<main class="main-content">
  {{#each screenings}}
    <div id="theater-{{@index}}" class="theater-section">
      <h2 class="theater-name">{{theaterName}}</h2>
      
      {{#each movies}}
        <div id="movie-{{@../index}}-{{@index}}" class="movie-card {{#if seen}}collapsed{{/if}} {{#if collapse}}collapsed{{/if}}">
          <div class="movie-header">
            <div class="movie-title-container">
              <h3 class="movie-title">
                {{#if movieUrl}}
                  <a href="{{movieUrl}}" target="_blank">{{title}}</a>
                {{else}}
                  {{title}}
                {{/if}}
              </h3>

              {{!-- {{#if isAtEarlierTheater}}
                <span class="earlier-theater-indicator">Shown at previous theater</span>
              {{/if}} --}}
            </div>

            <button class="toggle-button" aria-label="Toggle movie details">
              <span class="toggle-icon"></span>
            </button>
          </div>

          <table class="screenings-table" border="0" cellpadding="0" cellspacing="0">
            <tbody>
              {{#each days}}
                <tr>
                  <td class="date-cell">{{formatDate date}}</td>
                  <td class="times-cell">
                    {{#each screenings}}
                      <span class="time-slot">{{space (formatTime time)}}<a href="{{url}}">{{formatTime time}}</a></span>
                    {{/each}}
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      {{/each}}
    </div>
  {{/each}}
</main>
